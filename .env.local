# Local Environment Configuration for Compliance Checks API

# Database Configuration
# Options: "firestore", "tinydb", "dict"
# - firestore: Use Google Cloud Firestore (requires google-cloud-firestore)
# - tinydb: Use TinyDB for file-based storage (requires tinydb)
# - dict: Use in-memory Python dict (no external dependencies)
DATABASE_TYPE=dict

# Firestore Configuration (only used when DATABASE_TYPE=firestore)
USE_FIRESTORE=false


# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
